<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Spring Boot'un temel logback yapılandırmasını dahil et -->
    <include resource="org/springframework/boot/logging/logback/base.xml"/>

    <!-- JSON Console Appender -->
    <appender name="CONSOLE_JSON" class="ch.qos.logback.core.ConsoleAppender">
        <encoder class="net.logstash.logback.encoder.LogstashEncoder">
            <!-- JSON çıktısındaki alan isimlerini özelleştirebilirsiniz -->
            <fieldNames>
                <timestamp>timestamp</timestamp>
                <version>[ignore]</version> <!-- Logstash format version -->
                <level>level</level>
                <thread>thread</thread>
                <logger>logger</logger>
                <message>message</message>
                <stackTrace>stack_trace</stackTrace>
                <!-- Otomatik eklenen tracing alanları -->
            </fieldNames>
            <customFields>{"app_name":"${springAppName:-api-gateway}"}</customFields>
        </encoder>
    </appender>

    <root level="INFO">
        <appender-ref ref="CONSOLE_JSON" />
    </root>

</configuration> 